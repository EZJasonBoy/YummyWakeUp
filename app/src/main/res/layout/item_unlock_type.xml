<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_unlock_type_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_unlock_type_item">

        <com.capricorn.yummy.yummywakeup.view.RobotoTextView
            android:id="@+id/tv_diff_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:singleLine="true"/>

        <com.capricorn.yummy.yummywakeup.view.RobotoTextView
            android:id="@+id/tv_unlock_type_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_diff_lvl"
            android:layout_marginLeft="4dp"
            android:text="Unlock Type"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:singleLine="true"/>

    </RelativeLayout>

</RelativeLayout>
